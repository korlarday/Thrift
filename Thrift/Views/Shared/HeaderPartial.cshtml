
    <header id="header" class="full-header">

        <div id="header-wrap">

            <div class="container clearfix">

                <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                <!-- Logo
            ============================================= -->
                <div id="logo">
                    <a href="index.html" class="standard-logo" data-dark-logo="@Url.Content("~/Content/User/images/logo-dark.png")"><img src="@Url.Content("~/Content/User/images/logo.png")" alt="Canvas Logo"></a>
                    <a href="index.html" class="retina-logo" data-dark-logo="@Url.Content("~/Content/User/images/logo-dark@2x.png")"><img src="@Url.Content("~/Content/User/images/logo@2x.png")" alt="Canvas Logo"></a>
                </div><!-- #logo end -->
                <!-- Primary Navigation
            ============================================= -->
                <nav id="primary-menu">

                    <ul>
                        <li>
                            <a href="@Url.Action("Index","Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Index") ? "class=selected_nav" : "")><div>Home</div></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Features","Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Features") ? "class=selected_nav" : "")><div>Features</div></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Benefits","Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Benefits") ? "class=selected_nav" : "")><div>Benefits</div></a>
                        </li>
                        <li>
                            <a href="@Url.Action("FAQ","Home")" @(ViewContext.RouteData.Values["action"].ToString().Equals("FAQ") ? "class=selected_nav" : "")><div>FAQ</div></a>
                        </li>
                        @if (!Request.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.Action("Login","Account")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Login") ? "class=selected_nav" : "")><div>Log in</div></a>
                            </li>
                            <li>
                                <a href="@Url.Action("Register","Account")" @(ViewContext.RouteData.Values["action"].ToString().Equals("Register") ? "class=selected_nav" : "")><div>Register</div></a>
                            </li>
                        }
                        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li>
                                @Html.ActionLink("Admin Area", "Index", "Dashboard", new { area = "Admin" }, null)
                            </li>
                        }

                    </ul>

                    <!-- Top Search
                    ============================================= -->
                    @if (Request.IsAuthenticated)
                    {
                        @Html.Action("UserNavPartial", "Account", new { area = "" })
                    }
                </nav><!-- #primary-menu end -->

            </div>

        </div>

    </header>