@model IEnumerable<Thrift.Models.ViewModel.Account.CustomerVM>

@{
    ViewBag.Title = "Customers";
}

<div class="container-fluid">
            <div class="block-header">
                <h2>Customers</h2>
            </div>
            <!-- Striped Rows -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                List of Customers
                            </h2>
                        </div>
                        <div class="body table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>FIRST NAME</th>
                                        <th>LAST NAME</th>
                                        <th>USERNAME</th>
                                        <th>EMAIL</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ 
                                        int count = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.FirstName</td>
                                                <td>@item.LastName</td>
                                                <td>@item.Username</td>
                                                <td>@item.Email</td>
                                                <td>
                                                    <a href="/Admin/Customers/view-profile/@item.Username" class="btn bg-teal waves-effect">View</a>
                                                </td>
                                            </tr>
                                            ++count;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Striped Rows -->
            
        </div>